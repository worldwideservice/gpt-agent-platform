{
  "extends": "next/core-web-vitals",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "react-hooks/rules-of-hooks": [
      "error",
      {
        "additionalHooks": "^(useResource)$"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "@next/next/no-img-element": "warn",
    "no-console": "error",
    "no-warning-comments": [
      "warn",
      {
        "terms": ["TODO", "FIXME"],
        "location": "start"
      }
    ]
  },
  "overrides": [
    {
      "files": ["lib/services/usage-tracker.ts", "lib/services/llm.ts", "app/api/**/*.ts"],
      "rules": {
        "react-hooks/rules-of-hooks": "off"
      }
    },
    {
      "files": [
        "lib/providers/**/*.ts",
        "lib/queue.ts",
        "lib/rate-limit.ts",
        "lib/repositories/**/*.ts",
        "lib/services/**/*.ts",
        "lib/utils/**/*.ts",
        "lib/websocket/**/*.ts"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": ["scripts/**/*.ts", "scripts/**/*.js", "tests/**/*.ts", "**/*.test.ts", "**/*.test.tsx"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["lib/utils/logger.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}

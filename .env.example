SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ==============================================
# AUTHENTICATION
# ==============================================

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# ==============================================
# OPENROUTER API
# ==============================================

OPENROUTER_API_KEY=your_openrouter_api_key

# ==============================================
# RATE LIMITING (UPSTASH)
# ==============================================


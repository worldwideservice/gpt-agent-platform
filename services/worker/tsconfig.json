{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "../lib/*": ["../lib/*", "lib/*"]
    }
  },
  "include": ["src", "lib"],
  "exclude": ["dist", "node_modules"]
}
